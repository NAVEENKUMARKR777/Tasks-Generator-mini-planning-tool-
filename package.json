{
  "name": "tasks-generator",
  "version": "1.0.0",
  "description": "A mini planning tool for generating user stories and engineering tasks from feature ideas using AI",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-client": "cd client && npm install",
    "install-all": "npm install && npm run install-client"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "groq-sdk": "^0.3.3",
    "pdfreader": "^3.0.8",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "planning",
    "tasks",
    "ai",
    "generator",
    "user-stories",
    "engineering-tasks",
    "productivity"
  ],
  "author": "Tasks Generator Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/tasks-generator.git"
  },
  "homepage": "https://tasks-generator.onrender.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}